= render "devise/shared/error_messages", resource: resource
header.page__header
  .container
    .page__header-inner
      h2.page__title
        =t :edit_profile
.page__body
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "form") do |f|
    .container.is-sm
      .card
        .card__body
          .form__items
            .form__item
              = f.label :nickname, class: "a-form-label"
              = f.text_field :nickname, autofocus: true, class: "a-text-input"
            .form__item
              = f.label :email, class: "a-form-label"
              = f.email_field :email, autocomplete: "email", class: "a-text-input"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              div
                | Currently waiting confirmation for:
                = resource.unconfirmed_email
            .form__item
              = f.label :password, class: "a-form-label"
              = f.password_field :password, autocomplete: "new-password", class: "a-text-input"
              - if @minimum_password_length
                .a-form-help.a-short-text-style
            .form__item
              = f.label :password_confirmation, class: "a-form-label"
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "a-text-input"
            .form__item
              = f.label :current_password, class: "a-form-label"
              = f.password_field :current_password, autocomplete: "current-password", class: "a-text-input"
                .a-form-help.a-short-text-style
                  p
                    | we need your current password to confirm your changes
            .form__item
              = f.label :avatar, class: "a-form-label"
              = f.file_field :avatar, class: "a-text-input"
          .form__actions
            ul.form__actions-items
              li.form__actions-item
                = f.submit class: "a-button is-primary is-md is-block"
            .form__actions-back
              = link_to t('back'), :back, class: "form__actions-back-link"
